						.day-cell:not(.day-name)
							background-color rgba(32,106,85,0.15)
					.days-wrapper:nth-of-type(odd) 
						.day-cell:not(.day-name)
							background-color rgba(32,106,85,0.08)
					.days-wrapper:nth-of-type(n) 
						.day-cell.selected
							background-color rgba(224,207,194,1)
						.day-cell.holiday
