Gray(PC)
	col = 255-((255*PC)/100)
	rgb(col,col,col)
.course-academic
	margin 26px auto
	select,input[type="text"]
		padding 4px
.course-days
	border 1px solid alpha(black,.1)
	margin 26px 0
	max-width 580px	
	.wrapper 
		display flex
		.box
			padding 16px 26px
			width 50%
			text-align left
			label,select
				display block
				padding 4px
				margin 0
				width 100%
			select 
				margin-bottom 16px
			.well
				background-color alpha(black,.1)
				padding 10px
				min-height 20px
				margin 6px 0
				li 
					background-color white
					display block
					margin 2px 0
					padding 8px
					i 
						cursor pointer
						float right
						padding 0 4px
						transition transform 400ms ease-out
						&:hover 
							color red
							transform rotate3d(0,0,1,180deg)
.course-options
	margin 36px auto
	max-width 580px
	select,input[type="text"],input[type="number"]
		padding 4px
	input[type="number"]
		max-width 50px
		margin 16px 0 10px 0
	.radio-group
		display flex
		align-items flex-start
		padding 26px
		.item 
			border 1px solid alpha(black,.1)
			margin 0 10px
			padding 6px
			small 
				display block 
				margin-top 6px
.course-action
	margin 0 auto
	padding 16px 0
	border-top 1px solid alpha(black,.1)
#messages 
	align-items center
	background-color alpha(white,.85)
	display flex
	justify-content center 
	height 100%
	opacity 0
	left 0
	top 0
	position fixed
	visibility hidden
	transition opacity 300ms ease-out
	width 100%
	z-index 999
	.content 
		background-color white
		border 1px solid alpha(black,.1)
		box-shadow 2px 2px 4px alpha(black,.1)
		padding 4px
		transition transform 500ms cubic-bezier(.23,1,.32,1)
		transform translateY(-50%)
		width 380px
		.header 
			background-color green
			padding 4px 10px
			text-align right
			border-radius 4px
			.close 
				cursor pointer
				border none
		.body 
			padding 26px 10px
			text-align center
			font-size .7em
		.footer 
			padding 16px 10px
			border-top 1px solid alpha(black,.1)
			text-align center
			button 
				font-size .7em
				padding 4px 8px
.form-wrapper
	align-items flex-start
	display flex
	margin 18px 0
	max-width 580px
	.input-label
		text-align right 
		padding 6px 26px
		width 260px
		span 
			font-size 10pt
	.input 
		text-align left
		width 100%
		input[type="text"],select,textarea
			display block
			padding 4px 8px
			width 100%
		select.min
			display inline-block
			min-width 220px
			width auto
		small
			display block
			margin 8px 0 0 0
#messages.active 
	opacity 1
	visibility visible
	.content 
		transform translateY(0)